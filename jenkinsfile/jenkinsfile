pipeline {

    agent {
        node {
            label 'master'
        }
    }

    tools { 
        maven 'maven3' 
    }
    options {
        buildDiscarder logRotator( 
                    daysToKeepStr: '15', 
                    numToKeepStr: '10'
            )
    }

    environment {
        APP_NAME = "STUDENT_APP"
        APP_ENV  = "DEV"
    }

    stages {
        
        stage('S1_22051086') {
            steps {
				sh ' echo "S1_22051086 : Environment Preparation Completed"
            }
        }

        stage('S2_22051086') {
            steps {
                 sh ' echo "S2_22051086 : Environment Preparation Completed"
            }
        }

        stage('Printing All Global Variables') {
      
			parallel {
				
				stage('S3_22051086') {
					steps {
						sh ' echo "S3_22051086 : Environment Preparation Completed"
					}
				}
				
				stage('S4_22051086') {
					steps {
						sh ' echo "S4_22051086 : Environment Preparation Completed"
					}
				}
			}
        }
		
		stage('S5_22051086') {
            steps {
				sh ' echo "S5_22051086 : Environment Preparation Completed"
            }
        }
		stage('S6_22051086') {
            steps {
                 sh ' echo "S6_22051086 : Environment Preparation Completed"
            }
        }
		
		
		stage('Cleanup Workspace') {
            steps {
                cleanWs()
                sh """
                echo "Cleaned Up Workspace for ${APP_NAME}"
                """
            }
        }
    }   
}


